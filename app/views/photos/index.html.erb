<h1>Listing photos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= photo.title %></td>
        <td><%= link_to (image_tag photo.image(:medium)), [@surrounding, photo] %></td>
        <%= link_to 'Show', [@surrounding, photo] %>
        <%= link_to 'Edit', edit_surrounding_photo_path(@surrounding, photo) %>
        <%= link_to 'Destroy', [@surrounding, photo], :confirm => 'Are you sure?',
                  :method => :delete %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_surrounding_photo_path %>
